<body>
  <h1></h1>

  <div class="container sign-up">
    <div class="justify-content-center">
      <form class="mx-auto" action="/add_product" method="post">
        <div class="form-group">
          <label for="username-field"></label>
          <input type="text" class="login-form" id="barcode" name="barcode" placeholder="Barcode" />
          <label for="quantity-field"></label>
          <input type="text" class="login-form" id="quantity" name="quantity" placeholder="Quantity" />
          <label for="date-field"></label>
          <input type="date" class="login-form" id="date" name="expiration_date" placeholder="Expiration date" />
        </div>
        <button id="add-button" type="submit" class="button-primary">Add item</button>
      </form>
    </div>
  </div>

</body>

